{
  "name": "gvis",
  "version": "0.0.1",
  "description": "A Javascript Canvas Library Powered By Weeb",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "ls-lint": "ls-lint",
    "test:report": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limichange/gvis.git"
  },
  "keywords": [
    "canvas"
  ],
  "author": "limichange<limichange@hotmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/limichange/gvis/issues"
  },
  "homepage": "https://github.com/limichange/gvis#readme",
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "1.8.1",
    "@rollup/plugin-json": "4.0.3",
    "@rollup/plugin-replace": "2.3.2",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.4",
    "@types/puppeteer": "2.0.1",
    "chalk": "4.0.0",
    "codecov": "3.6.5",
    "jest": "25.5.2",
    "jest-canvas-mock": "2.2.0",
    "lerna": "3.20.2",
    "lint-staged": "10.2.0",
    "minimist": "1.2.5",
    "prettier": "2.0.5",
    "rollup": "2.7.5",
    "rollup-plugin-typescript2": "0.27.0",
    "ts-jest": "25.4.0",
    "ts-node": "8.9.1",
    "typescript": "3.8.3",
    "yorkie": "2.0.0"
  }
}