{
  "name": "gvis",
  "version": "0.0.1",
  "description": "A Javascript Canvas Library Powered By Weeb",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node ./scripts/dev.js -f esm",
    "build": "node --trace-warnings scripts/build.js ",
    "test": "jest --coverage",
    "test:ci": "jest --ci --runInBand --coverage",
    "test:watch": "jest --watch",
    "ls-lint": "ls-lint",
    "test:report": "codecov",
    "clean:nm": "rm -rf node_modules && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limichange/gvis.git"
  },
  "keywords": [
    "canvas"
  ],
  "author": "limichange<limichange@hotmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/limichange/gvis/issues"
  },
  "homepage": "https://github.com/limichange/gvis#readme",
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "1.8.1",
    "@microsoft/api-extractor": "7.8.2",
    "@rollup/plugin-json": "4.0.3",
    "@rollup/plugin-replace": "2.3.2",
    "@types/jest": "25.2.3",
    "@types/node": "13.13.6",
    "@types/puppeteer": "3.0.0",
    "chalk": "4.0.0",
    "chokidar": "3.4.0",
    "codecov": "3.7.0",
    "execa": "4.0.1",
    "jest": "26.0.0",
    "jest-canvas-mock": "2.3.1",
    "lerna": "3.21.0",
    "less": "3.11.1",
    "lint-staged": "10.2.4",
    "lodash": "4.17.15",
    "minimist": "1.2.5",
    "parcel": "1.12.4",
    "prettier": "2.0.5",
    "rollup": "2.10.2",
    "rollup-plugin-typescript2": "0.27.1",
    "ts-jest": "26.0.0",
    "ts-node": "8.9.1",
    "typescript": "3.9.2",
    "yorkie": "2.0.0"
  }
}